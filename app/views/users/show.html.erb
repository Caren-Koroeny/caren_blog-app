<%= stylesheet_link_tag 'users_styles' %>
<div>
  <ul>
    <li><img src="<%= @user.photo %>"></li>
    <div class="border">
      <li><%= @user.name %></li>
      <li>Number of posts: <%= @user.posts_counter %></li>
    </div>
  </ul>

  <!-- Bio section part -->
  <div class="bio">
    <h2>Bio</h2>
    <%= @user.bio %>
  </div>

  <% if @user_posts.present? %>
    <% @user_posts.each_with_index do |post, index| %>
      <div class="post">
        <h2>Post <%= index + 1 %></h2>
        <%= post.text %>
        <p>Comments: <%= post.comments_counter %> || Likes: <%= post.likes_counter %></p>
      </div>
    <% end %>
    <button>
      <%= link_to "See All Posts", user_posts_path(@user) %>
    </button>
  <% else %>
    <p>No posts found for this user.</p>
  <% end %>
</div>
