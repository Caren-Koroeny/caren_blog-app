<%= stylesheet_link_tag 'users_styles' %>

<div>
  <ul>
    <li><img src="<%= @user.photo %>"></li>
    <div class="border">
      <li><%= @user.name %></li>
      <li>Number of posts: <%= @user.posts.count %></li>
    </div>
  </ul>
  
  <!-- Bio section -->
  <div class="bio">
    <h2>Bio</h2>
    <%= @user.bio %>
  </div>
  
  <div class="post">
    <% @user_posts.each_with_index do |post, index| %>
      <h2>Post <%= index + 1 %></h2>
      <p><%= post.title %></p>
      <p>Comments: <%= post.commentsCounter %> || Likes: <%= post.likesCounter %></p>
    <% end %>
  </div>
  
  <div class="comments">
    <% @recent_comments.each do |comment| %>
      <p><span><%= comment.author.name %></span>: <%= comment.text %></p>
    <% end %>
  </div>
</div>
