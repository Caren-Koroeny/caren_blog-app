<!-- app/views/posts/new.html.erb -->

<h1>Create a New Post</h1>

<%= form_with(model: @post, url: user_posts_path(current_user)) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Post' %>
  </div>
<% end %>
